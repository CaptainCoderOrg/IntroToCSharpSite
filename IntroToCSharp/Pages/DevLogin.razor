@page "/dev/login"
<MudForm>
    <MudText>Username:
        <MudInput @bind-Value="@Username" />
    </MudText>
    <MudText>Password:
        <MudInput InputType="InputType.Password" @bind-Value="@Password" />
    </MudText>
    <MudText>
        <MudButton OnClick="@Login">Submit</MudButton>
    </MudText>
</MudForm>

@code {
    private string Username { get; set; } = String.Empty;
    private string Password { get; set; } = String.Empty;

    private void Login() => UserService.Service.EmailLogin(Username, Password).AndForget();
}