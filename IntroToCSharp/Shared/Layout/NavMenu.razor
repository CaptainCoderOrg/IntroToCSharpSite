                    <MudNavLink Href="@TheTypeSystem.Href">C# Type System</MudNavLink>
                </MudNavGroup>
                <MudNavGroup Title="Collections">
                    <MudNavLink Href="@Arrays.Href">Arrays</MudNavLink>
                    <MudNavLink Href="/not-implemented">Lists</MudNavLink>
