@if (Item.Href == null) {
    <MudNavGroup Title="@Item.Name">
        @foreach(MenuItem item in Item.Children) {
            <NavMenuItem Item="@item"/>
        }
    </MudNavGroup>
}
else {
    <MudNavLink Href="@Item.Href">@Item.Name</MudNavLink>
}

@code {
    [Parameter, EditorRequired]
    public MenuItem Item { get; set; } = null!;
}