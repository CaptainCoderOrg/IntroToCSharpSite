<MudDialog Style="padding:0; margin:0; background: none;" ContentStyle="background: none; padding: 0; margin:0; max-width:calc(100vw - 100px); max-height:calc(100vh - 100px);">
    <DialogContent>
            <MudImage Class="rounded" Style="width:100%; height:100%;" Src="@Src" onclick="@(() => Exit())" />
    </DialogContent>
</MudDialog>


@code {

    [CascadingParameter] public MudDialogInstance? MudDialog { get; set; }
    [Parameter] public string Src { get; set; } = null!;

    private void Exit() => MudDialog?.Close(DialogResult.Ok(true));
}