<code class="@CurrentClass">@ChildContent</code>
@code
{
    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;
    private string CurrentClass = "code-light";
    protected override void OnInitialized()
    {
        MainLayout.GetInstance().ContinueWith(mainLayout => {
            mainLayout.Result.OnDarkModeChange += isDarkMode => {
                CurrentClass = isDarkMode ? "code-dark" : "code-light";
                StateHasChanged();
            };
        });
    }
}