<MudDialog>
    <DialogContent>
        <MudTextField T="string" @bind-Value="TextValue" Label="Add Jounal Entry"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public List<JournalItem> JournalItems { get; set; } = null!;

    public string TextValue {get; set;} = String.Empty;
    void Submit() { 
        MudDialog.Close(DialogResult.Ok(true));
        JournalItem newItem = new JournalItem();
        newItem.Text = TextValue;
        JournalItems.Add(newItem); 
    }
    void Cancel() => MudDialog.Cancel();

}