@inject NavigationManager NavigationManager
@inject IDialogService DialogService

    <MudImage Src="@Path" Class="clickable-image rounded-lg" onclick="@OpenModal"/>
@code {
    [Parameter, EditorRequired]
    public string Src { get; set; } = null!;
    private string Path => $"/imgs/{NavigationManager.GetRoute()}/{Src}";
    private void OpenModal()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true, CloseButton = true, NoHeader = true,  MaxWidth = MaxWidth.Medium, FullWidth = true };
        var parameters = new DialogParameters();
        parameters.Add("Src", Path);
        DialogService.Show<ImageModal>("", parameters, options);
    }
}