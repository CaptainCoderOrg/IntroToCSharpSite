<MudStack>
    <MudItem>
    <b>The Recipe for an else-if statement:</b>
    </MudItem>
    <MudItem>
    <Output>
        if (<MudText Class="d-inline" Color="Color.Secondary">{Bool-Expression-0}</MudText>)
        {
            // ...
        }
        else if (<MudText Class="d-inline" Color="Color.Info">{Bool-Expression-1}</MudText>)
        {
            <MudText Class="d-inline" Color="Color.Primary">{Body}</MudText>
        }
    </Output>
    </MudItem>
</MudStack>
<MudList Clickable>
    <MudListItem Icon="@Icons.Material.Filled.Help" IconColor="Color.Secondary">
        <MudStack Row=true AlignItems="AlignItems.Center">
            <MudText Class="flex-none" Color="Color.Secondary">{Bool-Expression-0}</MudText>
            <MudText>An <b>expression</b> that <b>evaluates</b> to <Code>true</Code> or <Code>false</Code>.</MudText>
        </MudStack>
    </MudListItem>
    <MudListItem Icon="@Icons.Material.Filled.Help" IconColor="Color.Info">
        <MudStack Row=true AlignItems="AlignItems.Center">
            <MudText Class="flex-none" Color="Color.Info">{Bool-Expression-1}</MudText>
            <MudText>An <b>expression</b> that <b>evaluates</b> to <Code>true</Code> or <Code>false</Code>.</MudText>
        </MudStack>
    </MudListItem>
    <MudListItem Icon="@Icons.Material.Filled.DataObject" IconColor="Color.Primary">
        <MudStack Row=true AlignItems="AlignItems.Center">
            <MudText Class="flex-none" Color="Color.Primary">{Body}</MudText>
            <MudText>
                The code to execute if the <b>bool-expression-0</b> <b>evaluates</b> to <Code>false</Code> and
                <b>bool-expression-1</b> <b>evaluates</b> to <Code>true</Code>.
            </MudText>
        </MudStack>
    </MudListItem>
</MudList>